{
  "name": "html-dom-parser",
  "version": "5.1.2",
  "description": "HTML to DOM parser.",
  "main": "./lib/index.js",
  "module": "./esm/index.mjs",
  "exports": {
    ".": {
      "browser": {
        "import": "./esm/client/html-to-dom.mjs",
        "require": "./lib/client/html-to-dom.js"
      },
      "import": "./esm/index.mjs",
      "require": "./lib/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "run-s clean build:cjs build:rollup",
    "build:cjs": "tsc",
    "build:rollup": "rollup --config rollup.config.mjs --failAfterWarnings",
    "build:esm": "echo 'ESM is now handled by rollup'",
    "clean": "rm -rf .nyc_output coverage dist lib esm",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "lint:package": "publint",
    "lint:tsc": "tsc --noEmit",
    "prepare": "husky",
    "prepublishOnly": "run-s lint lint:tsc test:server clean build lint:package",
    "size-limit": "size-limit",
    "test": "run-s test:server test:client",
    "test:client": "npm run test:client:build && karma start",
    "test:client:build": "npm run build:rollup",
    "test:esm": "npm run build:rollup && node --test test/esm",
    "test:server": "npm run build:cjs && nyc mocha"
  },
  "files": [
    "/dist",
    "/esm",
    "/lib",
    "/src"
  ],
  "browser": {
    "./lib/index.js": "./lib/client/html-to-dom.js",
    "./esm/index.mjs": "./esm/client/html-to-dom.mjs"
  },
  "license": "MIT"
}